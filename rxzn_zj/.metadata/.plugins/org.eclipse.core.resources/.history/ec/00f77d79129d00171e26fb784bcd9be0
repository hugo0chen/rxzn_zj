#include "tools.h"

#define DEBUG_MODE  1
//#define TX_DEBUG    1

#define WIRE_PACKET_HEAD_1 0x55
#define WIRE_PACKET_HEAD_2 0xAA


// UART485 control
#define UART485_RX_E       (P4OUT &= ~BIT7)
#define UART485_TX_E       (P4OUT |= BIT7)


