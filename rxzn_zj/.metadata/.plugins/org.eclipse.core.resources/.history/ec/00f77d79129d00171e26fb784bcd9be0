void Delay_1ms(void);
void Delay_nms(unsigned long s);

void RfTransmitPacket(INT8U *buf, INT8U len);
void UartTransmitPacket(INT8U *buf, INT8U len);
void process_data_from_node(INT8U*data, INT8U len);
void send_freq_request_ack(void);

