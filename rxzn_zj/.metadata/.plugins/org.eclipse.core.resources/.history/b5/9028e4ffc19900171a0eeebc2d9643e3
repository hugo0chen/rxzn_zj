#include "msp430f2272.h"
#include "define.h"
#include "init.h"
#include "process.h"

extern INT8U bRfRcv;
INT8U tx_enable = 0;
ITN8U tx_done = 0;
// interrupt for receiving data
#pragma vector = PORT2_VECTOR
__interrupt void PORT2_ISR (void)
{
	if(RF_GDO2_INT){
		RF_GDO2_INT_D;
		RF_GDO2_INT_C;
		SET_FLG(bRfRcv);
	    RF_GDO2_INT_E;
	    wireless_communicator_indicate();
	}
	/*else if(RF_GDO0_INT){
		RF_GDO0_INT_D;
		RF_GDO0_INT_C;
		SET_FLG(bRfRcv);
	    RF_GDO0_INT_E;
	    wireless_communicator_indicate();
	}*/
}
