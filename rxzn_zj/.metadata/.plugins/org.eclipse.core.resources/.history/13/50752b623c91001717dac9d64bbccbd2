//#include "msp430f2272.h"
#include "define.h"
#include "task.h"
#include "interrupt.h"

static INT8U  hbcnt  = 0;

ulong _local_timeerB_tick;
#pragma vector = TIMERB0_VECTOR
__interrupt void Timer_B(void){	
	
	_local_timeerB_tick++;
	if(_local_time_tick%2 == 1){
		LED_ALARM_ON;	
	}
	else{
		LED_ALARM_OFF;	
	}
	if (hbcnt++ >= HB_INTVL)
	{
		hbcnt = 0;
		SET_FLG(bHeartBeat);
		//__bic_SR_register_on_exit(LPM3_bits);
	}
	 
	if (++BlinkIntvCnt >= BOT_BLINK_INTVL)
	{
		BlinkIntvCnt = 0;
	 	
	 	if (LED_SWITCH_ON)
	 	{
	 		if (BOTTLE == ContainerType)
	 		{
	 			LED_STATUS_BLINK;
	 		}
	 		else
	 		{
	 			LED_STATUS_ON;
	 		}
	 	}
	}
}
